<odoo>
    <record id="product_template_attrs_inherit_view" model="ir.ui.view">
        <field name="name">product.template.attrs.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <field name="orac_company" invisible="1"/>
                <page name="orac" string="ORAC" attrs="{'invisible': [('orac_company', '=', False)]}">
                    <group>
                        <group>
                            <field name="categ_id"/>
                            <field name="family"/>
                            <field name="orac_struct"/>
                            <field name="orac_struct_other"/>
                        </group>
                        <group>
                            <button name="action_generate_orac_name" type="object" string="Générer le nom" class="btn-primary oe_read_only"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="profondeur"/>
                            <field name="hauteur"/>
                            <field name="longueur"/>
                            <field name="diametre"/>
                        </group>
                        <group>
                            <field name="orac_technical_doc" widget="url"/>
                            <field name="orac_scheme_url" widget="url"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="worqbox_base.product_template_inherit_view" model="ir.ui.view">
        <field name="active">False</field>
    </record>

</odoo>

