<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_stage_tree" model="ir.ui.view">
        <field name="name">CRM Stage list view (with multi-company)</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="company_ids" groups="base.group_multi_company" widget="many2many_tags" optional="show"/>
            </field>
        </field>
    </record>

    <record id="crm_stage_form" model="ir.ui.view">
        <field name="name">CRM Stage fprm view (with multi-company)</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field
                    name="company_ids"
                    groups="base.group_multi_company"
                    options="{'no_create': True}"
                    widget="many2many_tags"
                />
            </field>
        </field>
    </record>

</odoo>
