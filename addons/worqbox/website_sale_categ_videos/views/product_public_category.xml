<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_public_category_form_video" model="ir.ui.view">
        <field name="name">product.public.category.form.video</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="after">
                <group string="Videos">
                    <group>
                        <field name="video_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="thumbnail" widget="image" class="float-left oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                                <field name="video_url"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Category video form -->
    <record id="view_category_video_form" model="ir.ui.view">
        <field name="name">product.public.category.video.form</field>
        <field name="model">product.public.category.video</field>
        <field name="arch" type="xml">
            <form string="Category Video">
                <field name="sequence" invisible="1"/>
                <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Description"/>
                        <h2><field name="name" placeholder="Description"/></h2>
                        <label for="video_url" string="Video URL"/><br/>
                        <field name="video_url"/><br/>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <div class="row">
                            <div class="col">
                                <field name="thumbnail" widget="image"/>
                            </div>
                            <div class="col" attrs="{'invisible': [('video_url', 'in', ['', False])]}">
                                <div class="o_video_container p-2">
                                    <span>Video Preview</span>
                                    <field name="embed_code" class="mt-2" widget="video_preview"/>
                                    <h4 class="o_invalid_warning text-muted text-center" attrs="{'invisible': [('embed_code', '!=', False)]}">
                                        Please enter a valid Video URL.
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>
