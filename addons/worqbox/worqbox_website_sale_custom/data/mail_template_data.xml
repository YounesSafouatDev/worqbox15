<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_template_sale_confirmation" model="mail.template">
            <field name="name">Sales Order: Orac Confirmation Email</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject">{{ object.company_id.name }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">contact@oracmaroc.ma</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 12px;">
                    <p style="margin: 0px; padding: 0px;"> Hello Mister/Miss <span
                            t-out="object.partner_id.name" />, </p>
                    <br />
                    <p> The Orac Maroc sales team has received your quote request.<br /> You will be
                        contacted as soon as possible.<br /><br /> Sincerely,<br /><br /> The Orac
                        Morocco sales team </p>
                </div>
            </field>
        </record>

    </data>
</odoo>